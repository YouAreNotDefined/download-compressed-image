{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES5",
    "lib": [
      "ES2020",
      "dom",
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": [
      "chrome",
      "node",
      "vuetify"
    ]
  },
  "include": [
    "./src/**/*",
    "vue-shims.d.ts",
    "./src/**/*.vue"
  ]
}
